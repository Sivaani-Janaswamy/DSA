{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile All Java Files",
      "type": "shell",
      "command": "javac",
      "args": [
        "-d",
        "out",
        "${workspaceFolder}/**/*.java"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$javac"]
    }
  ]
}
